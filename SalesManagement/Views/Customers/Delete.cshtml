@model SalesManagement.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Delete Customer</h4>
                </div>

                <div class="card-body">
                    <h5>Are you sure you want to delete this customer?</h5>

                    <dl class="row mt-3">
                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.SkinType)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SkinType)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CustomerId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
