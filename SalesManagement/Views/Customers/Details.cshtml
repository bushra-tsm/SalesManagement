@model SalesManagement.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Customer Details</h4>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Name)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Phone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Phone)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.SkinType)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.SkinType)</dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">
                        Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
