@model SalesManagement.Models.Sale

@{
    ViewData["Title"] = "Sale Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">

            <!-- Sale Summary -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Sale Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Model.Customer.Name</dd>

                        <dt class="col-sm-4">Sale Date</dt>
                        <dd class="col-sm-8">@Model.SaleDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8 fw-bold">
                            @Model.TotalAmount.ToString("C")
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Products -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Products</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.SaleDetails)
                            {
                                <tr>
                                    <td>@d.Product.Name</td>
                                    <td class="text-end">@d.UnitPrice.ToString("C")</td>
                                    <td class="text-center">@d.Quantity</td>
                                    <td class="text-end fw-semibold">
                                        @(d.UnitPrice* d.Quantity)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Total</th>
                                <th class="text-end fw-bold">
                                    @Model.TotalAmount
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Actions -->
            <div class="mt-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Back to List
                </a>
            </div>

        </div>
    </div>
</div>
